<Window x:Class="_02_ITP_DM_RL_RN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_ITP_DM_RL_RN"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <StackPanel Margin="10">
            <TextBlock Text="ToDo Liste" Foreground="FloralWhite"  FontSize="20" FontWeight="Bold"/>
            <ListBox Name="TodoList" Background ="FloralWhite" Height="200" Margin="0,10,0,10"/>
            <TextBox Name="TodoInput" Background ="FloralWhite" Width="200" Margin="0,0,10,0"/>
            <Button Content="Hinzufügen" Background="FloralWhite" Width="100" Height="25" Click="AddTodo" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
